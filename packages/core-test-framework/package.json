{
	"name": "@arkecosystem/core-test-framework",
	"version": "3.1.1",
	"description": "Test Framework for ARK Core",
	"license": "MIT",
	"contributors": [
		"Brian Faust <brian@ark.io>",
		"Erwann Gentric <erwann@ark.io>",
		"Joshua Noack <joshua@ark.io>"
	],
	"main": "dist/index",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "pnpm run clean && tsc",
		"build:watch": "pnpm run clean && tsc -w",
		"clean": "rimraf dist",
		"test": "cross-env CORE_ENV=test jest --forceExit --modulePathIgnorePatterns=\"__tests__/integration\"",
		"test:integration": "cross-env CORE_ENV=test jest --forceExit --testPathPattern=\"__tests__/integration/*\""
	},
	"dependencies": {
		"@arkecosystem/core": "workspace:*",
		"@arkecosystem/core-api": "workspace:*",
		"@arkecosystem/core-blockchain": "workspace:*",
		"@arkecosystem/core-cli": "workspace:*",
		"@arkecosystem/core-database": "workspace:*",
		"@arkecosystem/core-forger": "workspace:*",
		"@arkecosystem/core-kernel": "workspace:*",
		"@arkecosystem/core-p2p": "workspace:*",
		"@arkecosystem/core-state": "workspace:*",
		"@arkecosystem/crypto": "workspace:*",
		"bip39": "3.0.4",
		"bs58": "4.0.1",
		"bytebuffer": "5.0.1",
		"chance": "1.1.8",
		"env-paths": "2.2.0",
		"fast-memoize": "2.5.2",
		"fs-extra": "8.1.0",
		"got": "11.8.2",
		"jest-extended": "0.11.5",
		"lodash.clonedeep": "4.5.0",
		"tmp": "0.2.1",
		"xstate": "4.23.4"
	},
	"devDependencies": {
		"@hapi/hapi": "20.1.5",
		"@types/got": "9.6.12",
		"joi": "17.4.2"
	},
	"engines": {
		"node": ">=16.x"
	}
}
