{
	"name": "@arkecosystem/core-p2p-fastify",
	"version": "0.0.1",
	"description": "P2P API for ARK Core",
	"license": "MIT",
	"contributors": [],
	"main": "distribution/index.js",
	"types": "distribution/index.d.ts",
	"files": [
		"/distribution"
	],
	"scripts": {
		"build": "pnpm run clean && tsc",
		"build:proto": "pnpm run pbjs && pnpm run pbts",
		"build:watch": "pnpm run clean && tsc -w",
		"clean": "del distribution",
		"pbjs": "pbjs -t static-module -w commonjs src/socket-server/codecs/proto/*.proto -o src/socket-server/codecs/proto/protos.js",
		"pbts": "pbts src/socket-server/codecs/proto/protos.js -o src/socket-server/codecs/proto/protos.d.ts",
		"test": "cross-env CORE_ENV=test jest --forceExit"
	},
	"dependencies": {
		"@arkecosystem/core-container": "workspace:*",
		"@arkecosystem/core-contracts": "workspace:*",
		"@arkecosystem/core-crypto-validation": "workspace:*",
		"@arkecosystem/core-database": "workspace:*",
		"@arkecosystem/core-kernel": "workspace:*",
		"@arkecosystem/core-state": "workspace:*",
		"@arkecosystem/utils": "workspace:*",
		"@hapi/bounce": "2.0.0",
		"@hapi/hoek": "9.2.0",
		"@hapi/sntp": "4.0.0",
		"@hapi/teamwork": "5.1.0",
		"dayjs": "1.10.7",
		"delay": "4.4.1",
		"fastify": "^3.27.2",
		"fastify-accepts-serializer": "^3.2.0",
		"fastify-compress": "^4.0.1",
		"fastify-helmet": "^7.0.1",
		"fastify-rate-limit": "^5.7.2",
		"fastify-response-validation": "^0.2.0",
		"fastify-sensible": "^3.1.2",
		"ip": "1.1.5",
		"ipaddr.js": "2.0.1",
		"joi": "17.4.2",
		"multiaddr": "^10.0.1",
		"pluralize": "8.0.0",
		"pretty-ms": "7.0.1",
		"semver": "6.3.0"
	},
	"devDependencies": {
		"@types/fs-extra": "8.1.2",
		"@types/hapi__sntp": "3.1.2",
		"@types/ip": "1.1.0",
		"@types/semver": "6.2.3"
	},
	"engines": {
		"node": ">=16.x"
	}
}
